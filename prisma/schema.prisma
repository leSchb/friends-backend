generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String    @id @default(cuid())
  email     String    @unique
  password  String
  name      String
  createdAt DateTime  @default(now())

  reviews Review[]
}

model Review {
  id        String   @id @default(cuid())
  title     String
  review    String
  rating    Int
  createdAt DateTime @default(now())

  userId String
  user   User   @relation(fields: [userId], references: [id])
}